        <Authorized>
            <MudDivider Class="my-8"/>
            <MudNavLink Href="/.auth/logout?post_logout_redirect_uri=/" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Logout">@Localizer["Sign Out"]</MudNavLink>
        </Authorized>
    </AuthorizeView>
    <div class="pb-16" />
